<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/flipper"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent">
    	
	<LinearLayout android:id="@+id/FormLayoutInit" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">


	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="3" android:text="Texto mas que largo para ver que es lo que ocupa esto o no ... vamos pa alla" android:layout_gravity="center" android:gravity="center" android:textSize="30px"></TextView>
	<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="3" android:layout_gravity="center" android:text="Texto mas que largo para ver que es lo que ocupa esto o no ... vamos pa alla" android:gravity="center" android:textSize="18px"></TextView>
	<TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_weight="2" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="Mueva su dedo horizontalmente en la pantalla para desplazarse por el formulario"></TextView>
	</LinearLayout>

    
    <LinearLayout
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	<TextView
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:background="#00FF00"/>
    </LinearLayout>
    
<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:gravity="center">

<Button android:id="@+id/Button01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Guardar como incompleto" android:layout_margin="10px" android:textSize="26px"></Button>
<Button android:id="@+id/Button02" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Guardar como completo" android:layout_margin="10px" android:textSize="26px"></Button>
</LinearLayout>

    
</ViewFlipper>


