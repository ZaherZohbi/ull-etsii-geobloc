<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:gravity="center_vertical">
  <ImageButton
  	android:id="@+id/expandable_textview_switchButton"
  	android:layout_width="32dp"
  	android:layout_height="32dp"
  	android:layout_alignParentLeft="true"
  	android:layout_alignParentTop="true">
  </ImageButton>
  <TextView
  	android:id="@+id/expandable_textview_titleTextView"
  	android:textStyle="bold"
  	android:textSize="16sp"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:paddingLeft="7dp"
  	android:layout_alignParentTop="true"
  	android:layout_toRightOf="@id/expandable_textview_switchButton">
  </TextView>
  <TextView
  	android:id="@+id/expandable_textview_bodyTextView"
  	android:textSize="15sp"
  	android:textStyle="bold"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:paddingLeft="7dp"
  	android:layout_below="@id/expandable_textview_titleTextView"
  	android:layout_toRightOf="@id/expandable_textview_switchButton">
  </TextView>
</RelativeLayout>
