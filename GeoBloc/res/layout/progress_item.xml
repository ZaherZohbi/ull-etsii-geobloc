<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <ProgressBar
  	android:id="@+id/progress_item_bar"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:indeterminateOnly="true">
  </ProgressBar>
  <TextView
  	android:id="@+id/progress_item_text"
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	android:textSize="15sp"
  	android:textColor="#FFFFFF"
  	android:paddingTop="12dp"
  	android:paddingBottom="12dp"
  	android:paddingLeft="6dp"
  	android:layout_toRightOf="@id/progress_item_bar"
  	android:text="@string/checkingForConnectivity">
  </TextView>>
  <ProgressBar
  	android:id="@+id/progress_item_progressBar"
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	style="?android:attr/progressBarStyleHorizontal"
  	android:max="100"
  	android:paddingTop="6dp"
  	android:paddingBottom="12dp"
  	android:layout_below="@id/progress_item_text">
  </ProgressBar>
  	
</RelativeLayout>
