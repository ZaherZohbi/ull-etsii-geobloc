<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/instanceManager_viewFlipper"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  	<!-- Right page, the one with complete instances, ready to be sent -->
	<RelativeLayout
  		android:id="@+id/instanceManager_sendInstancesLayout"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent">
  		<!-- header -->
  		<LinearLayout
  			android:id="@+id/instanceManager_sendInstancesHeader"
  			android:orientation="horizontal"
  			android:background="@drawable/geobloc_header_one"
  			android:layout_alignParentTop="true"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:gravity="right">
  			<TextView
  				android:textColor="#FFFFFF"
  				android:padding="10dp"
  				android:textSize="20sp"
  				android:text="@string/instanceManager_sendInstancesTitle"
  				android:singleLine="true"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content">
  			</TextView>
  		</LinearLayout>
  		
  		<!-- Feet -->
  		<RelativeLayout
  			android:id="@+id/instanceManager_sendInstancesFooter"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:layout_alignParentBottom="true"
  			android:paddingTop="7dp">
  			<TextView
  				android:id="@+id/buttonSetCenterStub"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:layout_centerHorizontal="true"
  				android:visibility="invisible">
  			</TextView>
  			<Button
  				android:id="@+id/instanceManager_sendInstancesButton"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:layout_alignParentLeft="true"
  				android:layout_toLeftOf="@id/buttonSetCenterStub"
  				android:text="@string/instanceManager_sendInstancesButton"
	  			android:onClick="allInstancesButtonOnClick">
  			</Button>
  			<Button
  				android:id="@+id/instanceManager_markIncompleteButton"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:layout_toRightOf="@id/buttonSetCenterStub"
  				android:layout_alignParentRight="true"
  				android:text="@string/instanceManager_markIncomplete"
	  			android:onClick="allInstancesButtonOnClick">
  			</Button>
  		</RelativeLayout>
  		
  		<!-- List -->
  		<ListView
  			android:id="@+id/instanceManager_sendInstancesListView"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_below="@id/instanceManager_sendInstancesHeader"
  			android:layout_above="@id/instanceManager_sendInstancesFooter"
  			android:cacheColorHint="#00000000">
  		</ListView>  		
  	</RelativeLayout>  	
  	<!-- Left page, the one with incomplete instances -->
	<RelativeLayout
		android:id="@+id/instanceManager_deleteInstancesLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<!-- header -->
	  	<LinearLayout
	  		android:id="@+id/instanceManager_deleteInstancesHeader"
	  		android:orientation="horizontal"
	  		android:background="@drawable/geobloc_header_one"
	  		android:layout_alignParentTop="true"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:gravity="left">
	  		<TextView
	  			android:textColor="#FFFFFF"
	  			android:padding="10dp"
	  			android:textSize="20sp"
	  			android:text="@string/instanceManager_deleteInstancesTitle"
	  			android:singleLine="true"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content">
	  		</TextView>
	  	</LinearLayout>
  		<RelativeLayout
  			android:id="@+id/instanceManager_deleteInstancesFooter"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:layout_alignParentBottom="true">
  			<Button
  				android:id="@+id/instanceManager_deleteInstancesButton"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:text="@string/delete"
  				android:onClick="allInstancesButtonOnClick">
  			</Button>
  		</RelativeLayout>
  		
  		<ListView
  			android:id="@+id/instanceManager_deleteInstancesListView"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_below="@id/instanceManager_deleteInstancesHeader"
  			android:layout_above="@id/instanceManager_deleteInstancesFooter"
  			android:cacheColorHint="#00000000">
  		</ListView>
  		
	</RelativeLayout>
</ViewFlipper>
